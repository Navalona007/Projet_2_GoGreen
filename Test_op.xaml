<Window x:Class="Projet_2_GoGreen.Test_op"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_2_GoGreen"
        mc:Ignorable="d"
        Title="Test_op" Height="768" Width="1380">
    <Grid Margin="0,0,10,-30" Height="768">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="682*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <TabControl Margin="0,56,-10,-56" Height="768" Grid.ColumnSpan="2">
            <TabItem Header="Insertion">
                <Grid Background="#FFE5E5E5" Height="730">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Rectangle HorizontalAlignment="Left" Height="306" Margin="33,28,0,0" VerticalAlignment="Top" Width="409" Fill="#FFD6F9E5"/>
                    <Label Content="Date de plantation" HorizontalAlignment="Left" Margin="62,42,0,0" VerticalAlignment="Top" Foreground="Black" FontWeight="Bold" Width="185" FontSize="20"/>
                    <Rectangle HorizontalAlignment="Left" Height="306" Margin="484,28,0,0" VerticalAlignment="Top" Width="409" Fill="#FFD6F9E5"/>
                    <Rectangle HorizontalAlignment="Left" Height="252" Margin="33,380,0,0" VerticalAlignment="Top" Width="409" StrokeThickness="3" Stroke="#FF5AE4A8" Fill="White"/>
                    <DatePicker x:Name="dp_plantation" HorizontalAlignment="Left" Margin="67,88,0,0" VerticalAlignment="Top" Width="353" BorderBrush="{x:Null}" Text="" Height="49" FontSize="18"/>
                    <Label Content="Statut" HorizontalAlignment="Left" Margin="67,223,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="86" FontSize="20"/>
                    <ComboBox x:Name="cb_statut" HorizontalAlignment="Left" Margin="66,263,0,0" VerticalAlignment="Top" Width="353" Height="49"/>
                    <Label Content="Date de création" HorizontalAlignment="Left" Margin="66,133,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="169" FontSize="20"/>
                    <DatePicker x:Name="dp_creation" HorizontalAlignment="Left" Margin="67,175,0,0" VerticalAlignment="Top" Width="353" BorderBrush="{x:Null}" Height="49" FontSize="18"/>
                    <Label Content="Hauteur" HorizontalAlignment="Left" Margin="507,227,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="136" FontSize="20"/>
                    <TextBox x:Name="tb_hauteur" HorizontalAlignment="Left" Margin="513,264,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="353" Height="49" BorderBrush="{x:Null}"/>
                    <Label Content="Diamètre du tronc" HorizontalAlignment="Left" Margin="506,133,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="223" FontSize="20"/>
                    <TextBox x:Name="tb_diametre" HorizontalAlignment="Center" Margin="0,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="353" Height="49" BorderBrush="{x:Null}"/>
                    <Label Content="Date de mise à jour" HorizontalAlignment="Left" Margin="505,42,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="215" FontSize="20"/>
                    <DatePicker x:Name="dp_mise_a_jour" HorizontalAlignment="Center" Margin="0,88,0,0" VerticalAlignment="Top" Width="353" BorderBrush="{x:Null}" Height="46" FontSize="18"/>
                    <Rectangle HorizontalAlignment="Left" Height="281" Margin="487,380,0,0" VerticalAlignment="Top" Width="409" Fill="#FF5AE4A8"/>
                    <Label Content="Etat de feuillage" HorizontalAlignment="Left" Margin="62,395,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
                    <!--<RadioButton x:Name="rb_vert" Content="" HorizontalAlignment="Left" Margin="75,462,0,0" VerticalAlignment="Top" Height="18" Width="35"/>-->
                    <Viewbox Height="35" Margin="81,468,1204,227">
                        <RadioButton x:Name="rb_vert"  VerticalAlignment="Center"></RadioButton>
                    </Viewbox>
                    <Rectangle HorizontalAlignment="Left" Height="569" Margin="937,26,0,0" VerticalAlignment="Top" Width="409" Fill="#FF5AE4A8"/>
                    <Label Content="Espèce" HorizontalAlignment="Left" Margin="966,40,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="138" FontSize="20"/>
                    <ComboBox x:Name="cb_espece" HorizontalAlignment="Left" Margin="968,80,0,0" VerticalAlignment="Top" Width="353" Height="46">
                        <ComboBox.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFF0F0F0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </ComboBox.Background>
                    </ComboBox>
                    <Label Content="Type" HorizontalAlignment="Left" Margin="968,131,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="67" FontSize="20"/>
                    <ComboBox x:Name="cb_type" HorizontalAlignment="Left" Margin="968,173,0,0" VerticalAlignment="Top" Width="353" Height="46"/>
                    <Label Content="Position" HorizontalAlignment="Left" Margin="1234,371,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
                    <Label Content="Zone" HorizontalAlignment="Left" Margin="968,223,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="69" FontSize="20"/>
                    <TextBox x:Name="tb_zone" HorizontalAlignment="Left" Margin="968,262,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="353" Height="46" BorderBrush="{x:Null}"/>
                    <Label Content="Latitude" HorizontalAlignment="Left" Margin="978,426,0,0" VerticalAlignment="Top" Width="97" FontStyle="Italic" FontWeight="Bold" FontSize="18"/>
                    <Label Content="Longitude" HorizontalAlignment="Left" Margin="978,517,0,0" VerticalAlignment="Top" Width="107" FontStyle="Italic" FontWeight="Bold" FontSize="18"/>
                    <TextBox x:Name="tb_latitude" HorizontalAlignment="Left" Margin="1075,414,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" BorderBrush="#FF5AE4A8" Height="46"/>
                    <TextBox x:Name="tb_longitude" HorizontalAlignment="Left" Margin="1076,505,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="245" BorderBrush="#FF5AE4A8" Height="46"/>
                    <Button x:Name="bt_inserer" Content="Insérer" HorizontalAlignment="Left" BorderThickness="2" Margin="976,621,0,0" VerticalAlignment="Top" Width="159" Height="40" FontWeight="Bold" BorderBrush="#FF5AE4A8" Background="#FFDDDDDD" RenderTransformOrigin="0.437,0.489" FontSize="18">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="bt_annuler" Content="Annuler" HorizontalAlignment="Left" BorderThickness="2" Margin="1160,621,0,0" VerticalAlignment="Top" Width="159" Height="40" BorderBrush="#FF5AE4A8" Background="#FFDDDDDD" FontSize="18">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Label Content="Remarques et recommandations :" HorizontalAlignment="Left" Margin="553,390,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
                    <TextBox x:Name="tb_recommandation" HorizontalAlignment="Left" Height="210" Margin="487,450,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="409" Background="White" BorderBrush="{x:Null}"/>
                    <Label Content="- Make the world green again -" HorizontalAlignment="Left" Margin="123,639,0,0" VerticalAlignment="Top" FontFamily="Bell MT" FontSize="18"/>
                    <Image HorizontalAlignment="Left" Height="65" Margin="136,439,0,0" VerticalAlignment="Top" Width="79" Source="/green.png" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="23.069"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <Image HorizontalAlignment="Left" Height="67" Margin="132,520,0,0" VerticalAlignment="Top" Width="95" Source="/green (1).png" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="22.616"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <Image HorizontalAlignment="Left" Height="67" Margin="324,441,0,0" VerticalAlignment="Top" Width="89" Source="/green (2).png" RenderTransformOrigin="0.5,0.5">
                        <Image.RenderTransform>
                            <TransformGroup>
                                <ScaleTransform/>
                                <SkewTransform/>
                                <RotateTransform Angle="26.693"/>
                                <TranslateTransform/>
                            </TransformGroup>
                        </Image.RenderTransform>
                    </Image>
                    <Viewbox Height="35" Margin="292,460,1051,235">
                        <RadioButton x:Name="rb_marron"  VerticalAlignment="Top"/>
                    </Viewbox>
                    <Viewbox Height="35" Margin="83,551,1202,144">
                        <RadioButton x:Name="rb_jaune"  VerticalAlignment="Center"/>
                    </Viewbox>
                    <Viewbox Height="35" Margin="292,552,1051,142">
                        <RadioButton x:Name="rb_sans_feuille"  VerticalAlignment="Center"/>
                    </Viewbox>
                    <Label Content="Sans feuille" HorizontalAlignment="Left" Margin="326,557,0,0" VerticalAlignment="Top" FontSize="18" Width="103"/>
                </Grid>
            </TabItem>
            <TabItem Header="Liste">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="759*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="2" HorizontalAlignment="Left" Height="18" Margin="486,20,0,0" VerticalAlignment="Top" Width="17" Source="/search-interface-symbol.png" OpacityMask="#FF5AE4A8" RenderTransformOrigin="1.779,0.449"/>
                    <TextBox x:Name="tb_rechercher" HorizontalAlignment="Left" Height="24" Margin="511,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" BorderBrush="#FF5AE4A8" Grid.Column="2"/>
                    <DataGrid x:Name="grid_liste" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="12,51,8,63" AutoGenerateColumns="False" Grid.ColumnSpan="3" SelectionChanged="DataGrid_SelectionChanged" HorizontalGridLinesBrush="Black" Foreground="Black" FontWeight="Bold" BorderBrush="#FFC8CED4">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Foreground="#FF5AE4A8" FontWeight="Bold">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style/>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Date de plantation"/>
                            <DataGridTextColumn Header="Date de création"/>
                            <DataGridTextColumn Header="Date de mise à jour"/>
                            <DataGridComboBoxColumn Header="Statut"/>
                            <DataGridTextColumn Header="Zone"/>
                            <DataGridComboBoxColumn Header="Espèce"/>
                            <DataGridComboBoxColumn Header="Type"/>
                            <DataGridTextColumn Header="Hauteur"/>
                            <DataGridTextColumn Header="Diamètre du tronc"/>
                            <DataGridTextColumn Header="Etat de feuillage"/>
                            <DataGridTextColumn Header="Position"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Rectangle Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="63" Margin="12,317,0,0" VerticalAlignment="Top" Width="774" Fill="#FFD6F9E5"/>
                    <Button x:Name="bt_demander_modif" Content="Demander la modification" HorizontalAlignment="Left" BorderThickness="2" Margin="348,335,0,0" VerticalAlignment="Top" Width="178" Height="25" FontWeight="Bold" Background="#FFDDDDDD" RenderTransformOrigin="0.437,0.489" Grid.Column="2" BorderBrush="#FF5AE4A8">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="bt_demander_suppr" Content="Demander la suppression" HorizontalAlignment="Left" BorderThickness="2" Margin="544,335,0,0" VerticalAlignment="Top" Width="178" Height="25" FontWeight="Bold" Background="#FFDDDDDD" RenderTransformOrigin="0.437,0.489" Grid.Column="2" BorderBrush="#FF5AE4A8">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Image HorizontalAlignment="Left" Height="101" Margin="6,290,0,0" VerticalAlignment="Top" Width="122" Source="/Go Green.png" Grid.ColumnSpan="3"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Label Content="Arbre " HorizontalAlignment="Left" Margin="902,15,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Bookman Old Style" Width="127" FontSize="36"/>
        <Image HorizontalAlignment="Left" Height="60" Margin="823,2,0,0" VerticalAlignment="Top" Width="78" Source="/forest.png"/>
        <Image HorizontalAlignment="Left" Height="46" Margin="107,14,0,0" VerticalAlignment="Top" Width="69" Source="/user_1.png"/>
        <Label Content="Nom de l'opérateur :" HorizontalAlignment="Left" Margin="162,28,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="18"/>
        <Label x:Name="tb_opérateur" Content="" HorizontalAlignment="Left" Margin="187,19,0,0" VerticalAlignment="Top" Width="134"/>
        <Button x:Name="bt_se_déconnecter" Content="Se déconnecter" HorizontalAlignment="Left" BorderThickness="2" Margin="1105,18,0,0" VerticalAlignment="Top" Width="207" Height="40" FontWeight="Bold" RenderTransformOrigin="0.437,0.489" BorderBrush="#FF5AE4A8" FontSize="18" Click="bt_se_déconnecter_Click">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
