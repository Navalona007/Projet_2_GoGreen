<Window x:Class="Projet_2_GoGreen.Test_op"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projet_2_GoGreen"
        mc:Ignorable="d"
        Title="Test_op" Height="450" Width="800">
    <Grid Margin="0,0,10,-30">
        <TabControl Margin="0,56,-10,0">
            <TabItem Header="Insertion">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="39*"/>
                        <ColumnDefinition Width="8*"/>
                        <ColumnDefinition Width="350*"/>
                    </Grid.ColumnDefinitions>
                    <Rectangle HorizontalAlignment="Left" Height="184" Margin="15,8,0,0" VerticalAlignment="Top" Width="243" Fill="#FFD6F9E5" Grid.ColumnSpan="3"/>
                    <Label Content="Date de plantation" HorizontalAlignment="Left" Margin="29,19,0,0" VerticalAlignment="Top" Foreground="Black" FontWeight="Bold" Width="142" Grid.ColumnSpan="3"/>
                    <Rectangle HorizontalAlignment="Left" Height="184" Margin="176,8,0,0" VerticalAlignment="Top" Width="244" Fill="#FFD6F9E5" Grid.Column="2"/>
                    <Rectangle HorizontalAlignment="Left" Height="106" Margin="14,207,0,0" VerticalAlignment="Top" Width="243" Stroke="#FF5AE4A8" Grid.ColumnSpan="3"/>
                    <DatePicker x:Name="dp_plantation" HorizontalAlignment="Left" Margin="31,45,0,0" VerticalAlignment="Top" Width="207" BorderBrush="{x:Null}" Text="" Grid.ColumnSpan="3"/>
                    <Label Content="Statut" HorizontalAlignment="Left" Margin="31,118,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="56" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="cb_statut" HorizontalAlignment="Left" Margin="33,144,0,0" VerticalAlignment="Top" Width="207" Grid.ColumnSpan="3"/>
                    <Label Content="Date de création" HorizontalAlignment="Left" Margin="31,68,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="127" Grid.ColumnSpan="3"/>
                    <DatePicker x:Name="dp_creation" HorizontalAlignment="Left" Margin="31,94,0,0" VerticalAlignment="Top" Width="207" BorderBrush="{x:Null}" Grid.ColumnSpan="3"/>
                    <Label Content="Hauteur" HorizontalAlignment="Left" Margin="192,118,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="70" Grid.Column="2"/>
                    <TextBox x:Name="tb_hauteur" HorizontalAlignment="Left" Margin="197,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Height="24" BorderBrush="{x:Null}" Grid.Column="2"/>
                    <Label Content="Diamètre du tronc" HorizontalAlignment="Left" Margin="192,68,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="141" Grid.Column="2"/>
                    <TextBox x:Name="tb_diametre" HorizontalAlignment="Left" Margin="192,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="212" Height="22" BorderBrush="{x:Null}" Grid.Column="2"/>
                    <Label Content="Date de mise à jour" HorizontalAlignment="Left" Margin="192,19,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="148" Grid.Column="2"/>
                    <DatePicker x:Name="dp_mise_a_jour" HorizontalAlignment="Left" Margin="196,46,0,0" VerticalAlignment="Top" Width="211" BorderBrush="{x:Null}" Grid.Column="2"/>
                    <Rectangle HorizontalAlignment="Left" Height="148" Margin="176,205,0,0" VerticalAlignment="Top" Width="244" Fill="#FF5AE4A8" Grid.Column="2"/>
                    <Label Content="Etat de feuillage" HorizontalAlignment="Left" Margin="20,211,0,0" VerticalAlignment="Top" FontWeight="Bold" Grid.ColumnSpan="3"/>
                    <RadioButton x:Name="rb_vert" Content="" HorizontalAlignment="Center" Margin="0,241,0,0" VerticalAlignment="Top"/>
                    <RadioButton x:Name="rb_marron" Content="" HorizontalAlignment="Left" Margin="50,244,0,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <RadioButton x:Name="rb_jaune" Content="" HorizontalAlignment="Center" Margin="0,276,0,0" VerticalAlignment="Top"/>
                    <RadioButton x:Name="rb_aucune_feuille" Content="Aucune feuille" HorizontalAlignment="Left" Margin="50,275,0,0" VerticalAlignment="Top" Grid.Column="2"/>
                    <Rectangle HorizontalAlignment="Center" Height="12" Margin="0,242,0,0" VerticalAlignment="Top" Width="72" Fill="#FF36AF11" Grid.Column="1"/>
                    <Rectangle HorizontalAlignment="Center" Height="12" Margin="0,276,0,0" VerticalAlignment="Top" Width="72" Fill="#FFDFE04D" Grid.Column="1"/>
                    <Rectangle HorizontalAlignment="Left" Height="12" Margin="72,245,0,0" VerticalAlignment="Top" Width="72" Fill="#FF5F5F1A" RenderTransformOrigin="0.4,0.837" Grid.Column="2"/>
                    <Rectangle HorizontalAlignment="Left" Height="305" Margin="434,8,0,0" VerticalAlignment="Top" Width="243" Fill="#FF5AE4A8" Grid.Column="2"/>
                    <Label Content="Espèce" HorizontalAlignment="Left" Margin="448,21,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="60" Grid.Column="2"/>
                    <ComboBox x:Name="cb_espece" HorizontalAlignment="Left" Margin="452,47,0,0" VerticalAlignment="Top" Width="209" Grid.Column="2">
                        <ComboBox.Background>
                            <LinearGradientBrush EndPoint="0,1">
                                <GradientStop Color="#FFF0F0F0"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </ComboBox.Background>
                    </ComboBox>
                    <Label Content="Type" HorizontalAlignment="Left" Margin="448,69,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="45" Grid.Column="2"/>
                    <ComboBox x:Name="cb_type" HorizontalAlignment="Left" Margin="452,96,0,0" VerticalAlignment="Top" Width="209" Grid.Column="2"/>
                    <Label Content="Position" HorizontalAlignment="Left" Margin="605,208,0,0" VerticalAlignment="Top" FontWeight="Bold" Grid.Column="2"/>
                    <Label Content="Zone" HorizontalAlignment="Left" Margin="452,118,0,0" VerticalAlignment="Top" FontWeight="Bold" Width="49" Grid.Column="2"/>
                    <TextBox x:Name="tb_zone" HorizontalAlignment="Left" Margin="452,144,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="209" Height="24" BorderBrush="{x:Null}" Grid.Column="2"/>
                    <Label Content="Latitude" HorizontalAlignment="Left" Margin="455,234,0,0" VerticalAlignment="Top" Width="65" FontStyle="Italic" FontWeight="Bold" Grid.Column="2"/>
                    <Label Content="Longitude" HorizontalAlignment="Left" Margin="452,270,0,0" VerticalAlignment="Top" Width="77" FontStyle="Italic" FontWeight="Bold" Grid.Column="2"/>
                    <TextBox x:Name="tb_latitude" HorizontalAlignment="Left" Margin="520,238,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" BorderBrush="#FF5AE4A8" Grid.Column="2"/>
                    <TextBox x:Name="tb_longitude" HorizontalAlignment="Left" Margin="520,274,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="141" BorderBrush="#FF5AE4A8" Grid.Column="2"/>
                    <Button x:Name="bt_inserer" Content="Insérer" HorizontalAlignment="Left" BorderThickness="2" Margin="457,330,0,0" VerticalAlignment="Top" Width="92" Height="23" FontWeight="Bold" BorderBrush="#FF5AE4A8" Background="#FFDDDDDD" RenderTransformOrigin="0.437,0.489" Grid.Column="2">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="bt_annuler" Content="Annuler" HorizontalAlignment="Left" BorderThickness="2" Margin="566,330,0,0" VerticalAlignment="Top" Width="92" Height="23" BorderBrush="#FF5AE4A8" Background="#FFDDDDDD" Grid.Column="2">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Label Content="Remarques et recommandations :" HorizontalAlignment="Left" Margin="199,211,0,0" VerticalAlignment="Top" FontWeight="Bold" Grid.Column="2"/>
                    <TextBox x:Name="tb_recommandation" HorizontalAlignment="Left" Height="101" Margin="176,241,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="244" Background="White" BorderBrush="{x:Null}" Grid.Column="2"/>
                    <Label Content="- Make the world green again -" HorizontalAlignment="Left" Margin="55,326,0,0" VerticalAlignment="Top" FontFamily="Bell MT" Grid.ColumnSpan="3"/>
                </Grid>
            </TabItem>
            <TabItem Header="Liste">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="23*"/>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="759*"/>
                    </Grid.ColumnDefinitions>
                    <Image Grid.Column="2" HorizontalAlignment="Left" Height="18" Margin="486,20,0,0" VerticalAlignment="Top" Width="17" Source="/search-interface-symbol.png" OpacityMask="#FF5AE4A8" RenderTransformOrigin="1.779,0.449"/>
                    <TextBox x:Name="tb_rechercher" HorizontalAlignment="Left" Height="24" Margin="511,16,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="211" BorderBrush="#FF5AE4A8" Grid.Column="2"/>
                    <DataGrid x:Name="grid_liste" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="12,51,8,63" AutoGenerateColumns="False" Grid.ColumnSpan="3" SelectionChanged="DataGrid_SelectionChanged" HorizontalGridLinesBrush="Black" Foreground="Black" FontWeight="Bold" BorderBrush="#FFC8CED4">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Id" Foreground="#FF5AE4A8" FontWeight="Bold">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style/>
                                </DataGridTextColumn.HeaderStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Date de plantation"/>
                            <DataGridTextColumn Header="Date de création"/>
                            <DataGridTextColumn Header="Date de mise à jour"/>
                            <DataGridComboBoxColumn Header="Statut"/>
                            <DataGridTextColumn Header="Zone"/>
                            <DataGridComboBoxColumn Header="Espèce"/>
                            <DataGridComboBoxColumn Header="Type"/>
                            <DataGridTextColumn Header="Hauteur"/>
                            <DataGridTextColumn Header="Diamètre du tronc"/>
                            <DataGridTextColumn Header="Etat de feuillage"/>
                            <DataGridTextColumn Header="Position"/>
                        </DataGrid.Columns>
                    </DataGrid>
                    <Rectangle Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="63" Margin="12,317,0,0" VerticalAlignment="Top" Width="774" Fill="#FFD6F9E5"/>
                    <Button x:Name="bt_demander_modif" Content="Demander la modification" HorizontalAlignment="Left" BorderThickness="2" Margin="348,335,0,0" VerticalAlignment="Top" Width="178" Height="25" FontWeight="Bold" Background="#FFDDDDDD" RenderTransformOrigin="0.437,0.489" Grid.Column="2" BorderBrush="#FF5AE4A8">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                    </Button>
                    <Button x:Name="bt_demander_suppr" Content="Demander la suppression" HorizontalAlignment="Left" BorderThickness="2" Margin="544,335,0,0" VerticalAlignment="Top" Width="178" Height="25" FontWeight="Bold" Background="#FFDDDDDD" RenderTransformOrigin="0.437,0.489" Grid.Column="2" BorderBrush="#FF5AE4A8">
                        <Button.Resources>
                            <Style TargetType="{x:Type Border}">
                                <Setter Property="CornerRadius" Value="10" />
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>
            </TabItem>
        </TabControl>
        <Label Content="Arbre " HorizontalAlignment="Left" Margin="443,24,0,0" VerticalAlignment="Top" FontWeight="Bold" FontFamily="Bookman Old Style" Width="95" FontSize="24"/>
        <Image HorizontalAlignment="Left" Height="40" Margin="398,14,0,0" VerticalAlignment="Top" Width="78" Source="/forest.png"/>
        <Image HorizontalAlignment="Left" Height="27" Margin="29,16,0,0" VerticalAlignment="Top" Width="41" Source="/user_1.png"/>
        <Label Content="Nom de l'opérateur :" HorizontalAlignment="Left" Margin="61,19,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic"/>
        <Label Content="" HorizontalAlignment="Left" Margin="187,19,0,0" VerticalAlignment="Top" Width="134"/>
        <Button x:Name="bt_demander_suppr_Copy" Content="Se déconnecter" HorizontalAlignment="Left" BorderThickness="2" Margin="636,32,0,0" VerticalAlignment="Top" Width="116" Height="25" FontWeight="Bold" RenderTransformOrigin="0.437,0.489" BorderBrush="#FF5AE4A8">
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="10" />
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
